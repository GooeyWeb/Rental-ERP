@model IEnumerable<PersonModel>
@{
    ViewData["Title"] = "Spis klientów";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Spis klientów</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Person" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Dodaj klienta
            </a>
        </div>
        <form class="d-flex" method="get">
            <input class="form-control me-sm-2" type="search" name="searchValue" placeholder="Znajdź osobę...">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit" value="Search">Szukaj</button>
        </form>
    </div>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Imię
            </th>
            <th>
                Nazwisko
            </th>
            <th>
                Telefon
            </th>
            <th>
                PESEL
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="7%">
                    @obj.FirstName
                </td>
                <td width="15%">
                    @obj.LastName
                </td>
                <td width="10%">
                    @obj.TelephoneNumber
                </td>
                <td width="13%">
                    @obj.PESEL
                </td>
                <td width="35%">
                    <div class="btn-group" role="group">
                            <a asp-controller="Person" asp-action="Details" asp-route-id="@obj.PESEL" class="btn btn-primary mx-2">
                                <i class="bi bi-info-square"></i> &nbsp; Szczegóły
                            </a>
                            <a asp-controller="Person" asp-action="Edit" asp-route-id="@obj.PESEL" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> &nbsp; Edytuj
                            </a>
                            <a asp-controller="Person" asp-action="Delete" asp-route-id="@obj.PESEL" class="btn btn-danger mx-1">
                                <i class="bi bi-trash3"></i>
                            </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>