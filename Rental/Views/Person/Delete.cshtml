@model PersonModel
@{
	ViewData["Title"] = "Usuwanie klienta";
}

<form method="post">
	<input asp-for="PESEL" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Usuń klienta z listy</h2>
			<h3 class="text-secondary">Czy na pewno chcesz usunąć z listy klienta @Model.FirstName &nbsp; @Model.LastName ?</h3>
			<hr />
			<div class="mb-3">
				<label asp-for="PESEL"></label>
				<input asp-for="PESEL" disabled class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="IDnumber"></label>
				<input asp-for="IDnumber" disabled class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="FirstName"></label>
				<input asp-for="FirstName" disabled class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="LastName"></label>
				<input asp-for="LastName" disabled class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="City"></label>
				<input asp-for="City" disabled class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="Address"></label>
				<input asp-for="Address" disabled class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="TelephoneNumber"></label>
				<input asp-for="TelephoneNumber" disabled class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="Description"></label>
				<input asp-for="Description" disabled class="form-control" />
			</div>
			<div class="btn-group" role="group">
				<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
				<a asp-controller="Person" asp-action="Index" class="btn btn-secondary" style="width:150px">
					Back to List
				</a>
			</div>
		</div>
	</div>
</form>
