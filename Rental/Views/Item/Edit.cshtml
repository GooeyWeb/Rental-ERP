@model ItemModel
@{
	ViewData["Title"] = "Edycja przedmiotu";
}

<form method="post">
	<input asp-for="ItemID" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edytuj @Model.ItemID</h2>
			<hr />
		</div>
		<tr>
			<div asp-validation-summary="All"></div>
			<div class="mb-3">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="CostPerHour"></label>
				<input asp-for="CostPerHour" type="number" step="0.01" class="form-control" />
				<span asp-validation-for="CostPerHour" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="CostPerDay"></label>
				<input asp-for="CostPerDay" type="number" step="0.01" class="form-control" />
				<span asp-validation-for="CostPerDay" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Availability"></label>
				<input asp-for="Availability" class="form-control" />
				<span asp-validation-for="Availability" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-primary" style="width:150px">Zapisz zmiany</button>
			<a asp-controller="Item" asp-action="Index" class="btn btn-secondary" style="width:150px">
				Powrót do listy
			</a>
		</tr>
		<tr>
			
		</tr>
	</div>
</form>

@section Scripts
{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
