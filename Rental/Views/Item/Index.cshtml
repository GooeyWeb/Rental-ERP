@model IEnumerable<ItemModel>
@{
    ViewData["Title"] = "Spis przedmiotów";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Spis przedmiotów</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Item" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Dodaj przedmiot
                </a>
        </div>
        <form class="d-flex" method="get">
            <input class="form-control me-sm-2" type="search" name="searchValue" placeholder="Znajdź sprzęt...">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit" value="Search">Szukaj</button>
        </form>
    </div>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Nazwa
            </th>
            <th>
                Dostępna ilość
            </th>
            <th>
                Cena za godzinę
            </th>
            <th>
                Cena za dzień
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="20%">
                    @obj.Name
                </td>
                <td width="10%">
                    @obj.Availability
                </td>
                <td width="15%">
                    @obj.CostPerHour
                </td>
                <td width="15%">
                    @obj.CostPerDay
                </td>
                <td width="20%">
                    <div class="btn-group" role="group">
                            <a asp-controller="Item" asp-action="Edit" asp-route-id="@obj.ItemID" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> &nbsp; Edytuj
                            </a>
                            <a asp-controller="Item" asp-action="Delete" asp-route-id="@obj.ItemID" class="btn btn-danger mx-1">
                                <i class="bi bi-trash3"></i>
                            </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>