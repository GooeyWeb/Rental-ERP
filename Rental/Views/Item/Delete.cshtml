@model ItemModel
@{
	ViewData["Title"] = "Usuwanie przedmiotu";
}

<form method="post">
	<input asp-for="ItemID" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Usuń przedmiot</h2>
			<h3 class="text-secondary">Czy na pewno przedmiot @Model.Name jest do usunięcia?</h3>
			<hr />
			<div class="mb-3">
				<label asp-for="Name"></label>
				<input asp-for="Name" disabled class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="CostPerHour"></label>
				<input asp-for="CostPerHour" disabled type="number" step="0.01" class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="CostPerDay"></label>
				<input asp-for="CostPerDay" disabled type="number" step="0.01" class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="Availability"></label>
				<input asp-for="Availability" disabled class="form-control" />
			</div>
			<div class="btn-group" role="group">
				<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
				<a asp-controller="Item" asp-action="Index" class="btn btn-secondary" style="width:150px">
					Back to List
				</a>
			</div>
		</div>
	</div>
</form>
