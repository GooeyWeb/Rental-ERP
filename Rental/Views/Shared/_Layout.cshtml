<!DOCTYPE html>
<html lang="pl">
<globalization uiCulture="pl" culture="pl" />
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wypożyczalnia Racibórz</title>
    <link rel="stylesheet" href="~/css/bootswatchTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Rental.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                
                <div class="collapse navbar-collapse d-flex justify-content-center" id="navbarColor01">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link mx-3" asp-area="" asp-controller="Home" asp-action="Index">Strona główna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-3" asp-area="" asp-controller="Item" asp-action="Index">Przedmioty</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-3" asp-area="" asp-controller="Person" asp-action="Index">Klienci</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-3" asp-area="" asp-controller="Order" asp-action="Index">Aktywne umowy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted bg-dark">
        <div class="container text-center">
            <img src="https://cdn.discordapp.com/attachments/837615598929182723/1152344780391600178/logo.png" />
            &nbsp; ERP dla Wypożyczalnii sprzętu ogrodniczego i budowlanego.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
